{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp} [{Level}] {Message}{NewLine}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "C:\\dev\\CIV_SIM_TRAINING\\logs\\cst_back\\logs.txt",
          "outputTemplate": "{Timestamp} [{Level}] {Message}{NewLine}",
          "formatter": {
            "type": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
          }
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "CST_BACK"
    }
  },
  "DatabaseSettings": {
    "ConnectionString": "mongodb://localhost:27017",
    "DatabaseName": "civdb",
    "AccountCollectionName": "account",
    "CounterCollectionName": "counter",
    "InstanceCollectionName": "instance",
    "LeaderboardCollectionName": "leaderboard",
    "BaseSaveBucketName": "BaseSave"
  }
}